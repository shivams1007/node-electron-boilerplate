{
  "name": "electron-node",
  "version": "1.0.0",
  "description": "a simple electron app with nodejs",
  "main": "main.js",
  "homepage": "https://github.com/shivams1007/node-electron-boilerplate",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/shivams1007/node-electron-boilerplate.git"
  },
  "scripts": {
